<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_layout_tablet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1">

    <FrameLayout
        android:name="com.amel.bakingapp.fragments.RecipeStepFragment"
        android:id="@+id/container_step"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:scaleType="centerInside" />


    <FrameLayout
        android:id="@+id/container_step_detail"
        android:name="com.amel.bakingapp.fragments.RecipeStepDetailFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:padding="25dp"
        android:scaleType="centerInside" />

</LinearLayout>